<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.homepage.SupportPageController"
      spacing="10"
      fillWidth="true">


    <children>
        <HBox alignment="TOP_CENTER" prefHeight="37.0" prefWidth="600.0">
            <children>
                <Label alignment="CENTER" text="Support Page" />
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets top="10.0" />
            </padding>
        </HBox>
        <HBox prefHeight="98.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label prefHeight="18.0" prefWidth="298.0" text="Please select a question:">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                </Label>
                <ComboBox fx:id="questionsCombo" prefHeight="26.0" prefWidth="378.0" />
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
            <padding>
                <Insets right="20.0" top="20.0" />
            </padding>
        </HBox>
        <TextArea fx:id="detailsArea" disable="true" prefHeight="167.0" prefWidth="500.0" promptText="Choose &quot;Other&quot; to write :)" />
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="490.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleBack" text="Back">
                    <HBox.margin>
                        <Insets left="13.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleSend" text="Send" />
            </children>
            <padding>
                <Insets top="50.0" />
            </padding>
        </HBox>
    </children>
</VBox>
