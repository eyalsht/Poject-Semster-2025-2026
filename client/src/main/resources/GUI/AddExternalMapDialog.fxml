<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: #2c3e50;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AddExternalMapDialogController">
    <children>
        <VBox layoutX="20.0" layoutY="15.0" spacing="12.0" prefWidth="410.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Label text="[TEMP] Add External Map" textFill="white">
                    <font><Font name="System Bold" size="16.0" /></font>
                </Label>

                <Label text="Map Name *" textFill="#bdc3c7" />
                <TextField fx:id="txtMapName" promptText="Enter map name" />

                <Label text="City *  (select existing or type new)" textFill="#bdc3c7" />
                <ComboBox fx:id="cbCityName" editable="true" promptText="Select or type city name" maxWidth="1.7976931348623157E308" />

                <Label text="Description" textFill="#bdc3c7" />
                <TextArea fx:id="txtDescription" prefRowCount="3" promptText="Map description" wrapText="true" />

                <Label text="Map Image * (required)" textFill="#bdc3c7" />
                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <children>
                        <Button fx:id="btnUploadImage" mnemonicParsing="false" onAction="#onUploadImage"
                                text="Choose Image"
                                style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                        <Label fx:id="lblImageStatus" text="No image selected" textFill="#e74c3c" />
                    </children>
                </HBox>

                <ImageView fx:id="imgPreview" fitWidth="200.0" fitHeight="120.0" preserveRatio="true" />

                <Label fx:id="lblError" textFill="#e74c3c" wrapText="true" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <padding><Insets top="5.0" /></padding>
                    <children>
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onCancel"
                                text="Cancel" prefWidth="80.0"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
                        <Button fx:id="btnSubmit" mnemonicParsing="false" onAction="#onSubmit"
                                text="Submit" prefWidth="80.0" disable="true"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
