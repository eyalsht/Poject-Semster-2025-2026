<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardRoot" onMouseClicked="#toggleDetails" spacing="5" style="-fx-background-color: #34495e; -fx-padding: 10; -fx-background-radius: 10; -fx-cursor: hand; -fx-min-width: 250;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.SiteMiniCardController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="8">
            <children>
                <Label fx:id="lblNumber" textFill="#e67e22" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
                <VBox spacing="2">
                    <children>
                        <Label fx:id="lblSiteName" text="Site Name" textFill="#3498db" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                        <Label fx:id="lblCategory" text="Category" textFill="#ecf0f1" style="-fx-font-size: 12px; -fx-font-style: italic;" />
                    </children>
                </VBox>

                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="lblArrow" text="&#x25B6;" textFill="#3498db" style="-fx-font-size: 14px;">
                    <HBox.margin>
                        <Insets right="5" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>

        <VBox fx:id="detailsPane" managed="false" visible="false" spacing="8" style="-fx-padding: 8 0 0 0;">
            <children>
                <Separator opacity="0.2" />

                <Label fx:id="lblDescription" text="" textFill="#bdc3c7" wrapText="true" />

                <HBox spacing="15">
                    <children>
                        <VBox spacing="2">
                            <children>
                                <Label text="Location" textFill="#3498db" style="-fx-font-size: 11px; -fx-font-weight: bold;" />
                                <Label fx:id="lblLocation" text="-" textFill="#ecf0f1" style="-fx-font-size: 12px;" />
                            </children>
                        </VBox>
                        <VBox spacing="2">
                            <children>
                                <Label text="Visit Duration" textFill="#3498db" style="-fx-font-size: 11px; -fx-font-weight: bold;" />
                                <Label fx:id="lblDuration" text="-" textFill="#ecf0f1" style="-fx-font-size: 12px;" />
                            </children>
                        </VBox>
                        <VBox spacing="2">
                            <children>
                                <Label text="Accessible" textFill="#3498db" style="-fx-font-size: 11px; -fx-font-weight: bold;" />
                                <Label fx:id="lblAccessible" text="-" textFill="#ecf0f1" style="-fx-font-size: 12px;" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>