<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="450.0" style="-fx-background-color: rgba(0,0,0,0.65); -fx-background-radius: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PurchaseConfirmationDialogController">
    <children>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="20.0" prefWidth="400.0" spacing="12.0">
            <children>
                <Label fx:id="lblTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Confirm Purchase" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label fx:id="lblDetails" text="Purchase details" textFill="#bdc3c7" wrapText="true">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>

                <HBox fx:id="hboxMonths" alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Duration:" textFill="#ecf0f1">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="cbMonths" prefWidth="180.0" />
                    </children>
                    <padding>
                        <Insets top="5.0" bottom="5.0" />
                    </padding>
                </HBox>

                <Label fx:id="lblDiscount" text="" textFill="#2ecc71" visible="false" managed="false">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>

                <Label fx:id="lblPrice" text="Total: $0.00" textFill="#e67e22">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <padding>
                        <Insets top="5.0" bottom="5.0" />
                    </padding>
                </Label>

                <ProgressBar fx:id="progressBar" prefWidth="350.0" visible="false" managed="false" />

                <Label fx:id="lblStatus" text="" textFill="#bdc3c7" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" spacing="12.0">
                    <children>
                        <Button fx:id="btnConfirm" onAction="#onConfirm" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Confirm Purchase" />
                        <Button fx:id="btnUpdatePayment" managed="false" mnemonicParsing="false" onAction="#onUpdatePayment" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Update Payment" visible="false" />
                        <Button fx:id="btnCancel" onAction="#onCancel" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Cancel" />
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
