<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="600.0" style="-fx-background-color: rgba(0,0,0,0.65);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterPageController">

    <children>
        <HBox alignment="CENTER" layoutX="0.0" prefHeight="60.0" prefWidth="600.0" style="-fx-background-color: rgba(0,0,0,0.40); -fx-background-radius: 0 0 12 12;">
            <children>
                <Label text="Create New Account" style="-fx-text-fill: white;">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <VBox fx:id="step1Container" alignment="TOP_CENTER" layoutX="50.0" layoutY="70.0" prefWidth="500.0" spacing="15.0">
            <children>
                <Label text="Step 1: Personal Details" textFill="#4caf50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="140.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <children>
                        <Label text="First Name:" style="-fx-text-fill: white;" GridPane.rowIndex="0" />
                        <TextField fx:id="txtFirstName" promptText="Your first name" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Last Name:" style="-fx-text-fill: white;" GridPane.rowIndex="1" />
                        <TextField fx:id="txtLastName" promptText="Your last name" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Email:" style="-fx-text-fill: white;" GridPane.rowIndex="3" />
                        <TextField fx:id="txtEmail" promptText="example@mail.com" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Phone Number:" style="-fx-text-fill: white;" GridPane.rowIndex="4" />
                        <TextField fx:id="txtPhoneNumber" promptText="050-0000000" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="(Format: 05X-XXXXXXX)" textFill="#8899aa" GridPane.columnIndex="2" GridPane.rowIndex="4">
                            <font><Font size="10.0" /></font>
                        </Label>

                        <Label text="Username:" style="-fx-text-fill: white;" GridPane.rowIndex="5" />
                        <TextField fx:id="txtUsername" promptText="Choose a username" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label text="Password:" style="-fx-text-fill: white;" GridPane.rowIndex="6" />
                        <PasswordField fx:id="txtPassword" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="(Min 6 chars)" textFill="#8899aa" GridPane.columnIndex="2" GridPane.rowIndex="6">
                            <font><Font size="10.0" /></font>
                        </Label>

                        <Label text="Confirm Password:" style="-fx-text-fill: white;" GridPane.rowIndex="7" />
                        <PasswordField fx:id="txtConfirmPassword" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button onAction="#handleClose" prefWidth="100.0" style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: rgba(255,255,255,0.20); -fx-border-radius: 10; -fx-background-radius: 10;" text="Cancel">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Button>
                        <Button onAction="#handleNext" prefWidth="100.0" style="-fx-background-color: rgba(76,175,80,0.55); -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: rgba(76,175,80,0.80); -fx-border-radius: 10; -fx-background-radius: 10;" text="Next &gt;">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>


        <VBox fx:id="step2Container" alignment="TOP_CENTER" layoutX="50.0" layoutY="70.0" managed="false" prefWidth="500.0" spacing="20.0" visible="false">
            <children>
                <Label text="Step 2: Payment Details" textFill="#4caf50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <Label text="Please enter your credit card information to verify your account." textFill="#8899aa" />

                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="220.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <children>
                        <Label text="Card Number:" style="-fx-text-fill: white;" GridPane.rowIndex="0" />
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <TextField fx:id="txtCardNumber" promptText="XXXXXXXXXXXXXXXX" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" />
                            <Label text="16 digits" textFill="#8899aa">
                                <font><Font size="10.0" /></font>
                            </Label>
                        </VBox>

                        <Label text="Expiry Date:" style="-fx-text-fill: white;" GridPane.rowIndex="1" />
                        <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <TextField fx:id="txtExpiryMonth" prefWidth="60.0" promptText="MM" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" />
                                <Label text="/" style="-fx-text-fill: white;" />
                                <TextField fx:id="txtExpiryYear" prefWidth="60.0" promptText="YY" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" />
                                <Label text="(e.g. 05 / 28)" textFill="#8899aa">
                                    <padding><Insets left="10.0" /></padding>
                                    <font><Font size="10.0" /></font>
                                </Label>
                            </children>
                        </HBox>

                        <Label text="CVV:" style="-fx-text-fill: white;" GridPane.rowIndex="2" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <TextField fx:id="txtCVV" prefWidth="70.0" promptText="123" style="-fx-control-inner-background: rgba(0,0,0,0.45); -fx-background-color: rgba(0,0,0,0.45); -fx-text-fill: white; -fx-prompt-text-fill: rgba(255,255,255,0.45); -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.18); -fx-padding: 8;" />
                                <Label text="3 digits on back" textFill="#8899aa">
                                    <font><Font size="10.0" /></font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </GridPane>

                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button onAction="#handleBack" prefWidth="100.0" style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: rgba(255,255,255,0.20); -fx-border-radius: 10; -fx-background-radius: 10;" text="&lt; Back">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Button>
                        <Button onAction="#handleFinish" prefWidth="140.0" style="-fx-background-color: rgba(76,175,80,0.55); -fx-text-fill: white; -fx-cursor: hand; -fx-border-color: rgba(76,175,80,0.80); -fx-border-radius: 10; -fx-background-radius: 10;" text="Finish &amp; Register">
                            <font><Font name="System Bold" size="13.0" /></font>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>

        <Label fx:id="lblError" alignment="CENTER" layoutX="50.0" layoutY="480.0" prefWidth="500.0" text="" textFill="#ff6b6b" wrapText="true">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>

    </children>
</AnchorPane>
