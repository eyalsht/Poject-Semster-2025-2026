<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MyMapsPageController">
    <children>
        <VBox layoutX="30.0" layoutY="20.0" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="My Purchased Maps" textFill="#ecf0f1" style="-fx-font-size: 22px; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>

                <Label fx:id="lblEmpty" text="No maps purchased yet." textFill="#95a5a6" visible="false" managed="false">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <ScrollPane fitToWidth="true" prefHeight="470.0" style="-fx-background: transparent; -fx-background-color: transparent;">
                    <content>
                        <FlowPane fx:id="flowPaneMaps" hgap="20.0" vgap="20.0" prefWrapLength="900.0">
                            <padding>
                                <Insets bottom="15.0" left="15.0" top="15.0" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>

                <Button fx:id="btnRefresh" onAction="#onRefresh" prefHeight="30.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Refresh" />
            </children>
            <padding>
                <Insets bottom="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
