<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<VBox fx:id="mapCardRoot" alignment="TOP_CENTER" onMouseClicked="#onMapClicked" prefHeight="220.0" prefWidth="219.0" spacing="8.0" style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dcdde1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MapCardController">
    <children>
        <ImageView fx:id="imgMap" fitHeight="140.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </ImageView>

        <Label fx:id="lblMapName" text="Map Name" textFill="#2f3640">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <Label fx:id="lblVersion" text="Version: 1.0" textFill="#7f8c8d">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <Label fx:id="lblMapPrice" text="Price: $0.00" textFill="#e67e22">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Button fx:id="btnBuy" managed="false" mnemonicParsing="false" onAction="#onBuy" prefHeight="28.0" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Buy" visible="false" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
    </padding>
    <effect>
        <DropShadow blurType="GAUSSIAN" height="10.0" radius="4.5" width="10.0">
            <color>
                <Color opacity="0.1" />
            </color>
        </DropShadow>
    </effect>
</VBox>
