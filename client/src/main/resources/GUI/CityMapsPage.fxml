         </content>
      </ScrollPane>

                <Button fx:id="btnBack" layoutX="36.0" layoutY="26.0" mnemonicParsing="false" onAction="#onBackToCatalog" prefHeight="25.0" prefWidth="131.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Back to Catalog" />

    </children>
