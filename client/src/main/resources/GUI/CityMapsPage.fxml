                <Button fx:id="btnUpdateMap" managed="false" mnemonicParsing="false" onAction="#onUpdateMap" prefHeight="30.0" text="Edit Map" visible="false" />
                <Button fx:id="btnDeleteMap" managed="false" mnemonicParsing="false" onAction="#onDeleteMap" prefHeight="30.0" text="Delete Map" visible="false" />
                <Button fx:id="btnPriceUpdate" mnemonicParsing="false" onAction="#onPriceUpdate" prefHeight="30.0" text="Price Update" />
                <Button fx:id="btnApprovals" managed="false" mnemonicParsing="false" onAction="#onApprovals" prefHeight="30.0" text="Approvals (0)" visible="false" />
            </children>
        </HBox>
      <ScrollPane fx:id="scrollPaneCities" fitToWidth="true" layoutX="20.0" layoutY="170.0" prefHeight="401.0" prefWidth="1014.0">
         <content>
            <FlowPane fx:id="flowPaneMaps" hgap="20.0" prefHeight="45.0" prefWidth="848.0" prefWrapLength="800.0" vgap="20.0">
               <padding>
