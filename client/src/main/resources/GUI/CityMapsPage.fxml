<AnchorPane prefHeight="430.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CityMapsPageController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="15.0" spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Button fx:id="btnBack" onAction="#onBackToCatalog" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="â† Back to Catalog" />
                <Label fx:id="lblCityTitle" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="City Name" />

                <Button fx:id="btnApprovals" onAction="#onApprovals" text="Approvals (0)" />
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="60.0" spacing="10.0" AnchorPane.leftAnchor="20.0">
            <children>
                <Button fx:id="btnEditCity" onAction="#onEditCity" text="Edit City" />
                <Button fx:id="btnCreateTour" onAction="#onCreateTour" text="Create Tour" />
                <Button fx:id="btnAddMap" onAction="#onAddMap" text="Add Map" />
                <Button fx:id="btnUpdateMap" onAction="#onUpdateMap" text="Edit Map" />
                <Button fx:id="btnDeleteMap" onAction="#onDeleteMap" text="Delete Map" />
                <Button fx:id="btnPriceUpdate" onAction="#onPriceUpdate" text="Price Update" />
            </children>
        </HBox>

        <HBox layoutX="20.0" layoutY="100.0" spacing="10.0" AnchorPane.leftAnchor="20.0">
            <children>
                <TextField fx:id="txtSearch" onKeyReleased="#onSearch" promptText="Search maps, sites..." />
                <ComboBox fx:id="cbMap" promptText="Select Map" />
                <Button onAction="#onSearch" text="Search" />
            </children>
        </HBox>

        <ScrollPane fx:id="scrollPaneCities" fitToWidth="true" layoutY="140.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="140.0">
            <content>
                <FlowPane fx:id="flowPaneMaps" hgap="15.0" vgap="15.0" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>