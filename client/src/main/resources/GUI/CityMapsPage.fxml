<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CityMapsPageController">
    <children>
        <GridPane hgap="20.0" layoutX="30.0" layoutY="26.0" prefHeight="134.0" prefWidth="536.0" vgap="12.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="120.0" />
                <ColumnConstraints maxWidth="258.0" minWidth="196.5" prefWidth="258.0" />
            <ColumnConstraints maxWidth="187.5" minWidth="126.0" prefWidth="126.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
            </rowConstraints>
            <children>
                <Label style="-fx-font-weight: bold;" text="City Name:" textFill="#ecf0f1" GridPane.rowIndex="0" />
                <Label fx:id="lblCityTitle" textFill="#ecf0f1" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font>
                        <Font name="System Bold" size="20.0" /> </font>
                </Label>

                <Label text="Choose Map" GridPane.rowIndex="1" />
                <ComboBox fx:id="cbMap" prefWidth="200.0" promptText="Select Map" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Search Maps" GridPane.rowIndex="2" />
                <HBox prefHeight="30.0" prefWidth="258.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <TextField fx:id="txtSearch" prefHeight="26.0" prefWidth="85.0" promptText="Search sites..." />
                        <Button onAction="#onSearch" prefHeight="27.0" prefWidth="75.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Search" />
                        <Button onAction="#onClearSearch" prefHeight="28.0" prefWidth="63.0" text="Clear" />
                    </children>
                </HBox>
                <Button fx:id="btnBack" maxWidth="Infinity" onAction="#onBackToCatalog" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Back to Catalog" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <Button fx:id="btnApprovals" layoutX="436.0" layoutY="14.0" managed="false" maxWidth="Infinity" onAction="#onApprovals" text="Approvals (0)" visible="false" />

        <VBox alignment="CENTER" layoutX="672.0" layoutY="7.0" prefHeight="122.0" prefWidth="150.0" spacing="10.0" AnchorPane.rightAnchor="28.0" AnchorPane.topAnchor="7.0">
            <children>
                <Button fx:id="btnUpdateMap" managed="false" maxWidth="Infinity" onAction="#onUpdateMap" text="Edit Map" visible="false" />
                <Button fx:id="btnAddMap" managed="false" maxWidth="Infinity" onAction="#onAddMap" text="Add Map" visible="false" />
                <Button fx:id="btnDeleteMap" managed="false" maxWidth="Infinity" onAction="#onDeleteMap" text="Delete Map" visible="false" />
                <Button fx:id="btnPriceUpdate" managed="false" maxWidth="Infinity" onAction="#onPriceUpdate" text="Price Update" visible="false" />
      
              <VBox alignment="CENTER" prefHeight="145.0" prefWidth="140.0" spacing="10.0">
                  <children>
                      <Button fx:id="btnEditCity" managed="false" maxWidth="Infinity" onAction="#onEditCity" text="Edit City" visible="false" />
                      <Button fx:id="btnCreateTour" managed="false" maxWidth="Infinity" onAction="#onCreateTour" text="Create Tour" visible="false" />
                  </children>
                  <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
              </VBox>
            </children>
            <padding><Insets left="10.0" right="10.0" /></padding>
        </VBox>

        <HBox layoutX="10.0" layoutY="175.0" spacing="0.0" AnchorPane.leftAnchor="10.0">
            <children>
                <Button fx:id="btnShowMaps" onAction="#onShowMapsView" prefWidth="120.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5 0 0 0; -fx-border-color: #2980b9; -fx-font-weight: bold;" text="City Maps" />
                <Button fx:id="btnShowTours" onAction="#onShowToursView" prefWidth="120.0" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-background-radius: 0 5 0 0; -fx-border-color: #bdc3c7; -fx-font-weight: bold;" text="City Tours" />
            </children>
        </HBox>
        <ScrollPane fx:id="scrollPaneCities" fitToWidth="true" layoutY="210.0" prefHeight="360.0" prefWidth="830.0" style="-fx-border-color: #dcdde1; -fx-background-color: white;" AnchorPane.bottomAnchor="33.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <content>
                <FlowPane fx:id="flowPaneMaps" hgap="20.0" prefWidth="826.0" prefWrapLength="800.0" vgap="20.0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
