            <FlowPane fx:id="flowPaneMaps" hgap="20.0" prefHeight="45.0" prefWidth="848.0" prefWrapLength="800.0" vgap="20.0">
               <padding>
                  <Insets bottom="15.0" left="15.0" top="15.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>

                <Label fx:id="lblCityTitle" layoutX="200.0" layoutY="30.0" textFill="#ecf0f1" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Button fx:id="btnSubscribe" layoutX="700.0" layoutY="26.0" managed="false" mnemonicParsing="false" onAction="#onSubscribe" prefHeight="30.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Subscribe" visible="false" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="26.0" />

