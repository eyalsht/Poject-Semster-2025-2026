<AnchorPane prefHeight="600.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CityMapsPageController">
    <children>
        <GridPane hgap="8.0" layoutX="27.0" layoutY="68.0" prefHeight="73.0" prefWidth="470.0" translateX="5.8" translateY="2.7" vgap="12.0">
            <columnConstraints>
