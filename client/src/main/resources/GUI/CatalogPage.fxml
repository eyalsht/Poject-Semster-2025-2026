<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CatalogPageController">

    <children>

        <!-- Top selection area -->
        <GridPane hgap="20.0" layoutX="30.0" layoutY="26.0" prefHeight="134.0" prefWidth="406.0" vgap="12.0">
            <columnConstraints>
                <ColumnConstraints prefWidth="120.0" />
                <ColumnConstraints prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
                <RowConstraints prefHeight="30.0" />
            </rowConstraints>

            <children>
                <Label text="Choose City" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="cbCity" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Choose Map" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="cbMap" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Search" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <HBox prefHeight="30.0" prefWidth="258.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <TextField fx:id="txtSearch" prefHeight="26.0" prefWidth="85.0" promptText="Search cities, sites..." />
                        <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#onSearch" prefHeight="27.0" prefWidth="75.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Search" />
                        <Button fx:id="btnClearSearch" mnemonicParsing="false" onAction="#onClearSearch" prefHeight="28.0" prefWidth="63.0" text="Clear" />
                    </children>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </GridPane>


        <ScrollPane fx:id="scrollPaneCities" fitToWidth="true" layoutY="210.0" prefHeight="414.0" prefWidth="1030.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <content>
                <FlowPane fx:id="flowPaneCities" hgap="20.0" prefWidth="828.0" prefWrapLength="800.0" vgap="20.0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>

              <VBox alignment="CENTER" layoutX="672.0" layoutY="7.0" prefHeight="122.0" prefWidth="150.0" AnchorPane.rightAnchor="28.0" AnchorPane.topAnchor="7.0">
            <children>
                <Button fx:id="btnUpdateMap" maxWidth="Infinity" mnemonicParsing="false" onAction="#onUpdateMap" text="Edit Map">
                    <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
                </Button>

                      <Button fx:id="btnAddMap" maxWidth="Infinity" mnemonicParsing="false" onAction="#onAddMap" text="Add Map">
                    <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
                </Button>

                      <Button fx:id="btnDeleteMap" maxWidth="Infinity" mnemonicParsing="false" onAction="#onDeleteMap" text="Delete Map">
                    <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
                </Button>

                      <Button fx:id="btnPriceUpdate" maxWidth="Infinity" mnemonicParsing="false" onAction="#onPriceUpdate" text="Price Update">
                    <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
                </Button>
            </children>
        </VBox>
        <VBox alignment="CENTER" layoutX="462.0" layoutY="5.0" prefHeight="145.0" prefWidth="140.0" AnchorPane.rightAnchor="188.0">
            <children>
                <Button fx:id="btnCreateCity" maxWidth="Infinity" mnemonicParsing="false" onAction="#onCreateCity" text="Create City">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnEditCity" maxWidth="Infinity" mnemonicParsing="false" onAction="#onEditCity" text="Edit City">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnCreateTour" maxWidth="Infinity" mnemonicParsing="false" onAction="#onCreateTour" text="Create Tour">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnEditTour" maxWidth="Infinity" mnemonicParsing="false" onAction="#onEditTour" text="Edit Tour">
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>

                <Button fx:id="btnApprovals" layoutX="436.0" layoutY="14.0" maxWidth="Infinity" mnemonicParsing="false" onAction="#onApprovals" text="Approvals (0)" />

    </children>
</AnchorPane>
