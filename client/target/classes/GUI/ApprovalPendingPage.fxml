<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.lang.String?>
<AnchorPane prefHeight="650.0" prefWidth="500.0" style="-fx-background-color: rgba(0,0,0,0.65);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ApprovalPendingPageController">
   <stylesheets>
      <String fx:value="@../styles/theme.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"/>
   </stylesheets>
   <children>
      <!-- Title -->
      <VBox alignment="CENTER" spacing="4.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label fx:id="lblTitle" text="Pending Approvals" style="-fx-text-fill: white;">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="lblSubtitle" text="" style="-fx-text-fill: rgba(255,255,255,0.50); -fx-font-style: italic;">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>

      <!-- Table wrapped in glass card -->
      <VBox style="-fx-background-color: rgba(0,0,0,0.30); -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: rgba(255,255,255,0.12); -fx-border-width: 1; -fx-padding: 8;" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="85.0" AnchorPane.bottomAnchor="110.0">
         <children>
             <TableView fx:id="tblPending" VBox.vgrow="ALWAYS">
                 <columns>
                     <TableColumn fx:id="colType" prefWidth="80.0" text="Type"/>
                     <TableColumn fx:id="colTarget" prefWidth="220.0" text="Target"/>
                     <TableColumn fx:id="colInfo" prefWidth="150.0" text="Info"/>
                 </columns>
             </TableView>
         </children>
      </VBox>

      <!-- Status Label -->
      <Label fx:id="lblStatus" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="20.0" style="-fx-text-fill: white; -fx-font-size: 13;"/>

      <!-- Buttons -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Button fx:id="btnApprove" mnemonicParsing="false" onAction="#onApprove" prefWidth="100.0"
                    style="-fx-background-color: rgba(76,175,80,0.55); -fx-text-fill: white; -fx-border-color: rgba(76,175,80,0.80); -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;" text="Approve">
               <font><Font name="System Bold" size="13.0" /></font>
            </Button>
            <Button fx:id="btnDeny" mnemonicParsing="false" onAction="#onDeny" prefWidth="100.0"
                    style="-fx-background-color: rgba(244,67,54,0.55); -fx-text-fill: white; -fx-border-color: rgba(244,67,54,0.80); -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;" text="Deny">
               <font><Font name="System Bold" size="13.0" /></font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClose" prefWidth="100.0"
                    style="-fx-background-color: rgba(255,255,255,0.10); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.20); -fx-border-radius: 10; -fx-background-radius: 10; -fx-cursor: hand;" text="Close">
               <font><Font name="System Bold" size="13.0" /></font>
               <HBox.margin>
                  <Insets left="20.0"/>
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
