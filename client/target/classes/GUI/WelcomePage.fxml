<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="transparent-pane" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.WelcomePageController">

    <children>
        <VBox styleClass="transparent-pane" alignment="CENTER" spacing="20.0"
              AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <!-- Glass card -->
            <VBox alignment="CENTER" spacing="12.0" styleClass="welcome-card">
                <children>

                    <!-- Remove textFill so CSS controls it -->
                    <Label fx:id="lblTitle" text="Welcome to GCM System" styleClass="welcome-title">
                        <font>
                            <Font name="System Bold" size="36.0" />
                        </font>
                    </Label>

                    <Label fx:id="lblSubtitle"
                           text="Please login to view your personal area or browse the catalog"
                           styleClass="welcome-subtitle">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>

                </children>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
