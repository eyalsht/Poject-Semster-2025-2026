<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ProfilePageController">
   <children>

      <Label fx:id="lblWelcome"
             layoutX="200.0"
             layoutY="40.0"
             text="Welcome"
             style="-fx-font-size: 20px; -fx-font-weight: bold;" />

      <!-- Optional subtitle -->
      <Label layoutX="260.0"
             layoutY="70.0"
             text="Profile"
             style="-fx-font-size: 14px;" />

      <!-- Profile info -->
      <GridPane layoutX="140.0" layoutY="100.0" hgap="15" vgap="12">

         <children>
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lblName" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lblEmail" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Payment:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="lblPayment" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Inbox:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="lblInbox"
                   text="You have 0 new messages"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>

            <Label text="Purchase history:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="lblHistory"
                   text="(coming soon)"
                   wrapText="true"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="1"/>
         </children>

      </GridPane>

   </children>
</AnchorPane>
