                  <Image url="@images/gcmhomepage.png" />
               </image>
            </ImageView>

            <Label fx:id="lblWelcome" text="Welcome, Guest" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
   <left>
      <VBox prefHeight="430.0" prefWidth="116.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#onLoginOrProfile" prefHeight="30.0" prefWidth="150.0" text="Login">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></Button>

            <Button fx:id="btnCatalog" mnemonicParsing="false" onAction="#onCatalog" prefHeight="30.0" prefWidth="150.0" text="Catalog">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>

            <Button mnemonicParsing="false" onAction="#onSupport" prefHeight="30.0" prefWidth="150.0" text="Support">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin></Button>

            <Button mnemonicParsing="false" onAction="#onInfo" prefHeight="30.0" prefWidth="150.0" text="Info">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="btnCatalogUpdate" disable="true" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Catalog Update">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin></Button>

            <Button fx:id="btnPriceUpdate" disable="true" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Price Update">
