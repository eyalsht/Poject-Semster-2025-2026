                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin></Button>

            <Button fx:id="btnReports" disable="true" mnemonicParsing="false" prefHeight="30.0" prefWidth="150.0" text="Reports">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin></Button>


            <Button fx:id="btnManagement" mnemonicParsing="false" onAction="#onManagement" prefHeight="30.0" prefWidth="85.0" text="Management" visible="false">
               <VBox.margin>
                  <Insets left="10.0" top="30.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="10.0" />
               </font>
            </Button>

            <Button mnemonicParsing="false" onAction="#onCloseApp" prefHeight="30.0" prefWidth="150.0" text="Close">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </Button>

